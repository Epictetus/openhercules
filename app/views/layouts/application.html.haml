!!!
%html
  %head
    %title== Checklist Hub
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'jquery-1.4.4.js', 'jquery.hotkeys.js', 'underscore.js', 'backbone.js', "bootstrap-modal"
    = javascript_include_tag 'application'
    = csrf_meta_tag
    %link{:rel => "icon", :type => "image/png", :href => "/images/259-list.png"}
  %body{:id => @body_id}
    .topbar
      .listfill
        .container-fluid
          %a.brand{:href => "#"} Checklist Hub
          - if user_signed_in?
            .pull-right
              - if anonymous?
                %p
                  anonymous mode &bull;
                  = link_to "sign up", edit_anonymous_user_registration_path(current_user)
                  &bull;
                  = link_to "log in", new_user_session_path
              - else
                %p
                  == logged in as #{link_to current_user.email, edit_user_registration_path(current_user)}
                  &bull;
                  = link_to "logout", destroy_user_session_path
              
          - else
            %form.pull-right{:action => ""}
              %input.input-small{:placeholder => "Username", :type => "text"}/
              %input.input-small{:placeholder => "Password", :type => "password"}/
              %button.btn{:type => "submit"} Sign in
    .container-fluid
      .sidebar
        = yield :sidebar
      .content
        .row
          .span14
            = yield