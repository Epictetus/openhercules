%h2 Sign up

= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "form-stacked"}) do |f|
  = devise_error_messages!
  
  .clearfix{add_error_class(resource, :email)}
    %label{:for => "user_email"} Email
    = f.email_field :email
    
  .clearfix{add_error_class(resource, :username)}
    %label{:for => "user_username"} Username
    = f.text_field :username

  .clearfix{add_error_class(resource, :password)}
    %label{:for => "user_password"} Password
    = f.password_field :password

  .clearfix{add_error_class(resource, :password_confirmation)}
    %label{:for => "user_password_confirmation"} Password Confirmation
    = f.password_field :password_confirmation

  .clearfix
    = f.submit "Sign up", :class => "primary btn"


= render :partial => "devise/shared/links"
